<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Soltec.NET"
             x:Class="Soltec.NET.ConfiguracionPage"
             Title="Configuracion">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Configuracion" FontSize="24" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Carpetas}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="#2EE" Margin="0,0,0,10">
                        <Label Text="{Binding Nombre}" FontAttributes="Bold" />

                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Label Text="Usar offline" VerticalOptions="Center"/>
                            <Switch IsToggled="{Binding ModoOffline}" 
                                Toggled="Switch_Toggled"/>
                        </HorizontalStackLayout>

                        <Button Text="Sincronizar" Command="{Binding Source={RelativeSource AncestorType={x:Type local:ConfiguracionPage}}, Path=BindingContext.SincronizarCarpetaCommand}" 
                                CommandParameter="{Binding Nombre}" />

                        <Label Text="{Binding EstadoArchivos}" TextColor="Red" FontAttributes="Bold"/>
                        <Label Text="{Binding ProgresoDescarga}" TextColor="Blue" FontAttributes="Italic"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>