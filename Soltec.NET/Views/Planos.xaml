<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Soltec.NET.PlanosPage"
             Title="Planos">

    <ScrollView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            Padding="10">

        <VerticalStackLayout Spacing="12">

            <!-- Fabricante A -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Frame BackgroundColor="#4CAF50"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="10">
                        <Label Text="📦 Fabricante A"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold" />
                    </Frame>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Frame BackgroundColor="White"
                       CornerRadius="10"
                       HasShadow="True"
                       Padding="10">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="📄 Manual 1" FontSize="16"/>
                            <Label Text="📄 Manual 2" FontSize="16"/>
                            <Label Text="📄 Manual 3" FontSize="16"/>
                        </VerticalStackLayout>
                    </Frame>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Fabricante B -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Frame BackgroundColor="#2196F3"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="10">
                        <Label Text="🏭 Fabricante B"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold" />
                    </Frame>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Frame BackgroundColor="White"
                       CornerRadius="10"
                       HasShadow="True"
                       Padding="10">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="📄 Manual 1" FontSize="16"/>
                            <Label Text="📄 Manual 2" FontSize="16"/>
                            <Label Text="📄 Manual 3" FontSize="16"/>
                        </VerticalStackLayout>
                    </Frame>
                </toolkit:Expander.Content>
            </toolkit:Expander>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>